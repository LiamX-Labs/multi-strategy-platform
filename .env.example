# ========================================
# ALPHA TRADING INFRASTRUCTURE - ENVIRONMENT CONFIGURATION
# ========================================
# Copy this file to .env and fill in your actual values
# Never commit the .env file to git!

# ========================================
# DATABASE CREDENTIALS
# ========================================
POSTGRES_PASSWORD=your_secure_postgres_password_here
REDIS_PASSWORD=your_secure_redis_password_here

# ========================================
# BYBIT API CONFIGURATION
# ========================================
# Set to 'true' for demo/testnet, 'false' for live trading
BYBIT_DEMO=true
BYBIT_TESTNET=false

# ========================================
# PER-BOT BYBIT API KEYS
# ========================================
# Each bot should have its own API key for accurate trade attribution

# Shortseller Bot
SHORTSELLER_BYBIT_API_KEY=your_shortseller_api_key_here
SHORTSELLER_BYBIT_API_SECRET=your_shortseller_api_secret_here

# LXAlgo Bot
LXALGO_BYBIT_API_KEY=your_lxalgo_api_key_here
LXALGO_BYBIT_API_SECRET=your_lxalgo_api_secret_here

# Momentum Bot
MOMENTUM_BYBIT_API_KEY=your_momentum_api_key_here
MOMENTUM_BYBIT_API_SECRET=your_momentum_api_secret_here

# ========================================
# TELEGRAM COMMAND & CONTROL BOT
# ========================================
# Get bot token from @BotFather on Telegram
C2_TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Your Telegram user ID (get from @userinfobot)
# Multiple IDs separated by commas: 123456,789012
C2_TELEGRAM_ADMIN_IDS=your_telegram_user_id_here

# ========================================
# OPTIONAL: SERVICE-SPECIFIC OVERRIDES
# ========================================
# Usually you don't need to change these

# Database Connection
# POSTGRES_HOST=postgres
# POSTGRES_PORT=5432
# POSTGRES_DB=trading_db
# POSTGRES_USER=trading_user

# Redis Connection
# REDIS_HOST=redis
# REDIS_PORT=6379
# REDIS_DB=0

# PgBouncer
# PGBOUNCER_PORT=6432

# Logging
# LOG_LEVEL=INFO
